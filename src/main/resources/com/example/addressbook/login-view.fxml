<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="450.0" prefWidth="699.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label prefHeight="74.0" prefWidth="659.0" text="Welcome to the Address Book Application. You must agree to the following terms and conditions before you can use the application." wrapText="true" />
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" halignment="LEFT"/>
                <ColumnConstraints percentWidth="50" halignment="LEFT"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Username -->
                <TextField fx:id="usernameField" GridPane.columnIndex="0" promptText="Username" />
                <!-- Password -->
                <PasswordField fx:id="passwordField" GridPane.columnIndex="0" GridPane.rowIndex="1" promptText="Password" />
                <!-- Repeat Password -->
                <PasswordField fx:id="repeatPasswordField" GridPane.columnIndex="0" GridPane.rowIndex="2" promptText="Repeat Password" />
                <!-- Terms and Conditions TextArea -->
                <TextArea fx:id="termsAndConditions" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="3" editable="false" prefHeight="130.0" wrapText="true" />
            </children>
        </GridPane>
        <CheckBox fx:id="agreeCheckBox" onAction="#onAgreeCheckBoxClick" text="I agree to the terms and conditions." />
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <Button text="Cancel" />
            <Button fx:id="signUpButton" disable="true" onAction="#onSignUpButtonClick" text="Sign Up" />
        </HBox>
    </children>
</VBox>
