<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="450.0" prefWidth="699.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" percentWidth="50" />
                <ColumnConstraints halignment="LEFT" percentWidth="50" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Username -->
                <TextField fx:id="usernameField" promptText="Username" GridPane.columnIndex="0" />
                <!-- Password -->
                <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <!-- Repeat Password -->
                <PasswordField fx:id="repeatPasswordField" promptText="Repeat Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <!-- Terms and Conditions TextArea -->
                <TextArea fx:id="termsAndConditions" editable="false" prefHeight="130.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="3" />
            </children>
        </GridPane>
        <CheckBox fx:id="agreeCheckBox" onAction="#onAgreeCheckBoxClick" prefHeight="55.0" prefWidth="210.0" text="I agree to the terms and conditions." />
        <HBox alignment="CENTER" spacing="10.0">
            <Button prefHeight="45.0" prefWidth="100.0" text="Cancel" />
            <Button fx:id="signUpButton" disable="true" onAction="#onSignUpButtonClick" prefHeight="45.0" prefWidth="100.0" text="Sign Up" />
        </HBox>
    </children>
</VBox>
