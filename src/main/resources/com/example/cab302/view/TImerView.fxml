<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302.controller.TimerController">
    <BorderPane prefHeight="800" prefWidth="1200">
        <left>
            <AnchorPane prefHeight="800.0" prefWidth="213.0" style="-fx-background-color: #263F73;">
                <children>
                    <Label alignment="CENTER" layoutX="1.0" layoutY="300.0" prefHeight="32.0" prefWidth="213.0" style="-fx-font-size: 25px;" text="CAB302 Dragons" textFill="WHITE" />
                    <Label alignment="CENTER" layoutX="1.0" layoutY="350.0" prefHeight="32.0" prefWidth="213.0" style="-fx-font-size: 22px;" text="Screen Timer" textFill="WHITE" />
                </children>
            </AnchorPane>
        </left>
        <center>
            <VBox alignment="CENTER" spacing="20">
                <StackPane fx:id="timerContainer" prefHeight="300" prefWidth="300" />
                <Button fx:id="backToLoginButton" minHeight="25.0" onAction="#switchSceneToLogin" prefWidth="300.0" style="-fx-background-color: #263F73;" text="Back to Login" textFill="WHITE" />
            </VBox>
        </center>
    </BorderPane>
</StackPane>
