<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab302.controller.StatsController">
    <BorderPane prefHeight="800" prefWidth="1200">
        <left>
            <AnchorPane prefHeight="800.0" prefWidth="213.0" style="-fx-background-color: #263F73;">
                <Label alignment="CENTER" layoutX="1.0" layoutY="300.0" prefHeight="32.0" prefWidth="213.0" style="-fx-font-size: 25px;" text="CAB302 Dragons" textFill="WHITE" />
                <Label alignment="CENTER" layoutX="1.0" layoutY="350.0" prefHeight="32.0" prefWidth="213.0" style="-fx-font-size: 22px;" text="Stats View" textFill="WHITE" />
            </AnchorPane>
        </left>
        <center>
            <VBox alignment="CENTER" spacing="20">
                <ComboBox fx:id="timePeriodComboBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="1 Day"/>
                            <String fx:value="1 Week"/>
                            <String fx:value="1 Month"/>
                            <String fx:value="1 Year"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <PieChart fx:id="statsPieChart" />
                <Button text="Back to Timer" onAction="#handleBackToTimerAction" style="-fx-background-color: #263F73;" textFill="WHITE" />
            </VBox>
        </center>
    </BorderPane>
</StackPane>


