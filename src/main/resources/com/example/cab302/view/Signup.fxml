<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302.controller.SignupController">
   <children>
      <BorderPane fx:id="signupPane" prefHeight="800" prefWidth="1200">
         <left>
            <AnchorPane prefHeight="800.0" prefWidth="213.0" style="-fx-background-color: #263F73;">
               <children>
                  <Label alignment="CENTER" layoutX="1.0" layoutY="300.0" prefHeight="32.0" prefWidth="213.0" style="-fx-font-size: 25px;" text="CAB302 Dragons" textFill="WHITE" />
                  <Label alignment="CENTER" layoutX="1.0" layoutY="350.0" prefHeight="32.0" prefWidth="213.0" style="-fx-font-size: 22px;" text="Screen Timer" textFill="WHITE" />
               </children>
            </AnchorPane>
         </left>
         <center>
            <VBox alignment="CENTER" prefHeight="800" prefWidth="600" spacing="20" style="-fx-background-color: #FFFFFF;">
               <Label style="-fx-font-size: 25px; -fx-text-fill: black;" text="Signup" />
               <TextField fx:id="emailField" maxWidth="300" promptText="Email" />
               <PasswordField fx:id="enterPassword" maxWidth="300" promptText="Password" />
               <PasswordField fx:id="enterPasswordConfirm" maxWidth="300" promptText="Confirm Password" />
               <Button fx:id="signUpConfirm" onAction="#onClickSignUp" style="-fx-background-color: #263F73; -fx-text-fill: white; -fx-pref-width: 300px;" text="Confirm" />
               <Button fx:id="LoginButton" onAction="#SwitchtoLogin" style="-fx-background-color: #263F73; -fx-text-fill: white; -fx-pref-width: 300px;" text="Back to login" />
               <Label fx:id="loginMessageLabel" textFill="RED" />
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>

